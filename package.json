{
  "name": "qabhub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "preinstall": "npm ci --prefix client",
    "postinstall": "npm ci --prefix server",
    "start": "npm run dev:server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "deploy:client": "cp -a client/build/. public/",
    "build:client": "npm run --prefix client build",
    "heroku-postbuild": "npm run build:client && npm run deploy:client",
    "dev:server": "npm --prefix server run start",
    "dev:client": "npm --prefix client start",
    "seed": "npm --prefix server run seed"
  },
  "engines": {
    "node": "8.9.4"
  },
  "dependencies": {
    "client": "file:client",
    "concurrently": "^5.0.0",
    "server": "file:server"
  }
}
